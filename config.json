{
  "project": {
    "name": "n8n-ffmpeg-mago",
    "version": "2.0.0",
    "description": "Instalador FFmpeg para n8n (Orion / Docker Swarm)",
    "author": "Orion Design",
    "license": "MIT"
  },
  "scripts": {
    "install": "install.sh",
    "check": "check.sh",
    "verify": "install.sh -c",
    "uninstall": "install.sh -u",
    "auto-install": "install.sh -y"
  },
  "supported_systems": {
    "alpine": {
      "package_manager": "apk",
      "dependencies": [
        "ffmpeg",
        "python3",
        "py3-pip",
        "gcc",
        "python3-dev",
        "musl-dev",
        "curl"
      ],
      "pre_install": [
        "openssl",
        "libssl3",
        "libcrypto3"
      ]
    },
    "debian": {
      "package_manager": "apt-get",
      "dependencies": [
        "ffmpeg",
        "python3",
        "python3-pip",
        "build-essential",
        "curl"
      ]
    }
  },
  "ffmpeg": {
    "version_check": "ffmpeg -version",
    "test_command": "ffmpeg -f lavfi -i testsrc=duration=1:size=320x240:rate=1 -f null -",
    "common_formats": [
      "mp4",
      "avi",
      "mov",
      "mkv",
      "webm",
      "flv"
    ],
    "common_codecs": {
      "video": [
        "libx264",
        "libx265",
        "libvpx-vp9",
        "libxvid"
      ],
      "audio": [
        "aac",
        "mp3",
        "libopus",
        "flac"
      ]
    }
  },
  "docker": {
    "container_pattern": "n8n",
    "working_directory": "/tmp",
    "user": "root"
  },
  "paths": {
    "scripts": {
      "install": "./install.sh",
      "check": "./check.sh"
    },
    "docs": {
      "readme": "./README.md",
      "usage_guide": "./docs/ffmpeg-usage-guide.md"
    },
    "examples": {
      "workflow": "./examples/ffmpeg-workflow-example.json"
    }
  }
}
